---
 package/boot/uboot-envtools/files/ramips                     | 2 ++
 .../linux/ramips/mt7621/base-files/lib/upgrade/platform.sh   | 5 +++++
 2 files changed, 7 insertions(+)

diff --git a/package/boot/uboot-envtools/files/ramips b/package/boot/uboot-envtools/files/ramips
index a47e2950d3..fe3c3157e4 100644
--- a/package/boot/uboot-envtools/files/ramips
+++ b/package/boot/uboot-envtools/files/ramips
@@ -26,6 +26,7 @@ allnet,all0256n-8m|\
 allnet,all5002)
 	ubootenv_add_uci_config "/dev/mtd1" "0x0" "0x10000" "0x10000"
 	;;
+wrtnode,wrtnode2p|\
 buffalo,wsr-1166dhp|\
 buffalo,wsr-600dhp|\
 mediatek,linkit-smart-7688|\
@@ -48,6 +49,7 @@ linksys,ea7300-v1|\
 linksys,ea7300-v2|\
 linksys,ea7500-v2|\
 xiaomi,mi-router-3g|\
+xiaomi,mi-router-3glite|\
 xiaomi,mi-router-3-pro|\
 xiaomi,mi-router-4|\
 xiaomi,mi-router-ac2100|\
diff --git a/target/linux/ramips/mt7621/base-files/lib/upgrade/platform.sh b/target/linux/ramips/mt7621/base-files/lib/upgrade/platform.sh
index c9152c5cf4..c97ac02688 100755
--- a/target/linux/ramips/mt7621/base-files/lib/upgrade/platform.sh
+++ b/target/linux/ramips/mt7621/base-files/lib/upgrade/platform.sh
@@ -68,6 +68,11 @@ platform_do_upgrade() {
 	xiaomi,redmi-router-ac2100)
 		nand_do_upgrade "$1"
 		;;
+	xiaomi,mi-router-3glite)
+		CI_KERNPART="kernel1"
+		CI_UBIPART="rootfs1"
+		nand_do_upgrade "$1"
+		;;
 	iodata,wn-ax1167gr2|\
 	iodata,wn-ax2033gr|\
 	iodata,wn-dx1167r)
